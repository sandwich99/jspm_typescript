{
    "version": "1.5.3",
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "declaration": false,
        "noImplicitAny": true,
		"sourceMap": true,
        "removeComments": true,
        "noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
        "noEmitOnError": false,
        "outDir": "tmp"
    },
    "filesGlob": [
        "typings/**/*.d.ts",
        "./app/**/*.ts",
        "!./node_modules/**",
        "!./dist/**",
        "!./tmp/**"
    ]
}